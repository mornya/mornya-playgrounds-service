{
  "name": "mornya-playgrounds-service",
  "version": "0.0.1",
  "private": true,
  "license": "MIT",
  "description": "NodeJS server with JWT, MongoDB, Social-login, File-uploader and Send-mail",
  "repository": "https://github.com/mornya/mornya-playgrounds-service",
  "author": "mornya <mornya78@gmail.com>",
  "main": "dist/index.js",
  "engines": {
    "node": "~6.9.1",
    "npm": ">=3.10.0"
  },
  "scripts": {
    "prestart": "npm run clean && mkdir -p dist && npm run -s build",
    "start": "pm2 start dist/index.js --name mornya-playgrounds-service",
    "stop": "pm2 delete mornya-playgrounds-service",
    "restart": "pm2 restart mornya-playgrounds-service",
    "dev": "nodemon src/index.js --exec \"node -r babel-register --max_old_space_size=1024\"",
    "clean": "rimraf dist",
    "build": "babel src -s -D -d dist",
    "test": "jest --watchAll",
    "lint": "eslint src --cache --ignore-pattern .gitignore --ext js --max-warnings 100"
  },
  "keywords": [
    "mornya",
    "server",
    "express",
    "mongodb",
    "jwt",
    "jsonwebtoken",
    "passport",
    "multer",
    "babel",
    "es6",
    "es2015",
    "es2016",
    "es2017",
    "jest",
    "eslint"
  ],
  "dependencies": {
    "body-parser": "^1.18.2",
    "chalk": "^2.4.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.3",
    "fs-extra": "^6.0.0",
    "jsonwebtoken": "^8.2.1",
    "mongoose": "^5.0.17",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "nodemailer": "^4.6.5",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "passport-google-oauth": "^1.0.0",
    "passport-kakao": "^0.0.5",
    "passport-naver": "^1.0.6",
    "pug": "^2.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-plugin-module-resolver": "^3.1.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-minify": "^0.4.0",
    "babel-register": "^6.26.0",
    "dotenv": "^5.0.1",
    "eslint": "^4.19.1",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-watch": "^3.1.4",
    "jest": "^22.4.3",
    "nodemon": "^1.18.0",
    "rimraf": "^2.6.2",
    "supertest": "^3.0.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
